<section class="page-content">
  <h1>Clientes Cadastrados</h1>

  <a href="/clientes/novo" class="menu-btn">+ Novo Cliente</a>

  <table class="data-table">
    <thead>
      <tr>
        <th>ID</th>
        <th>Nome</th>
        <th>Ações</th>
      </tr>
    </thead>
    <tbody>
      {{#each clientes}}
        <tr>
          <td>{{id}}</td>
          <td>{{nome}}</td>
          <td>
            <a href="/clientes/{{id}}/editar" class="btn-editar">Editar</a>
            <form action="/clientes/{{id}}/excluir" method="POST" class="form-excluir">
              <button type="submit" class="btn-excluir">Excluir</button>
            </form>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>

  <a href="/" class="btn-voltar">← Voltar</a>
</section>

